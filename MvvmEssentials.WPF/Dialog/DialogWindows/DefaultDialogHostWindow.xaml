<Window
    x:Class="MvvmEssentials.WPF.Dialog.DefaultDialogHostWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MvvmEssentials.WPF.Dialog"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{Binding Title}"
    d:DataContext="{d:DesignInstance Type=local:DefaultDialogHostViewModel,
                                     IsDesignTimeCreatable=True}"
    x:ClassModifier="internal"
    SizeToContent="WidthAndHeight"
    WindowStyle="SingleBorderWindow"
    mc:Ignorable="d">
    <Frame x:Name="frame" Content="{Binding Content}" />
</Window>